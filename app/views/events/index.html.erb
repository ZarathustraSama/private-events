<h1>Here are all the upcoming events available!</h1>
<% if @events.upcoming.any? %>
  <ul>
    <% @events.upcoming.each do |event| %>
      <li>
        <div class="Upcoming-Event">
          <%= link_to event.name, event_path(event.id) %>
        </div>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>...if there were any...</p>
<% end %>
<br />
<h2>Here are all past events</h2>
<% if @events.past.any? %>
  <ul>
    <% @events.past.each do |event| %>
      <li>
        <div class="Past-Event">
          <%= link_to event.name, event_path(event.id) %>
        </div>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>...if there were any...</p>
<% end %>


<% if user_signed_in? %>
  <%= link_to "Make your new event!", new_event_path %><br />
  <%= link_to "Log out", destroy_user_session_path, method: :delete, data: { turbo_method: :delete } %>
<% else %>
  <%= link_to "Log in", new_user_session_path %>
<% end %>
<% if flash[:alert] %>
  <br />
  <br />
  <div class="alert"><%= flash[:alert] %></div>
<% end %>